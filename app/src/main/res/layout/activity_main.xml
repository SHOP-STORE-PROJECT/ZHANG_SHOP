<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        />
    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
    <RadioButton
        android:id="@+id/rb01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/selector_sy"
        android:checked="true"
        android:gravity="center"
        android:button="@null"
        android:text="首页"
        />
    <RadioButton
        android:id="@+id/rb02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/selected_fl"
        android:button="@null"
        android:text="分类"
        />
    <RadioButton
        android:id="@+id/rb03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/selected_gw"
        android:text="购物车"
        android:button="@null"
        />
    <RadioButton
        android:id="@+id/rb04"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/selected_wd"
        android:text="我的"
        android:button="@null"
        />
    </RadioGroup>
</LinearLayout>
